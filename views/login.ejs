<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/loginStyle.css" />
    <title>Login</title>
    <script
      src="https://kit.fontawesome.com/b0a15acee7.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="rotate-text position-fixed text-light mt-10 ms-6">
      <h1 class="fs-1">We Are Primark</h1>
      <h4 class="fs-5">At Primark, there's something for everyone</h4>
    </div>
    <div
      class="bg-image vh-100 d-flex justify-content-center align-items-center"
    >
      <div
        class="form-container d-flex flex-column justify-content-center align-items-center h-85 gap-3 rounded border-custom p-5 w-85 bg-custom-2"
      >
        <% if (messages.error || messages.success) { %>
        <div class="flash-messages w-100 mb-3">
          <% if (messages.error) { %>
          <div class="alert alert-danger text-center">
            <%= messages.error %>
          </div>
          <% } %> <% if (messages.success) { %>
          <div class="alert alert-success text-center">
            <%= messages.success %>
          </div>
          <% } %>
        </div>
        <% } %>

        <form
          action="/user-login"
          method="POST"
          class="d-flex flex-column justify-content-center align-items-center h-100 gap-3 w-100"
        >
          <img
            src="/images/pngfind.com-contact-icons-png-380414.png"
            class="img-fluid img-sm"
            alt="Login Icon"
          />
          <div><h4 class="me-10 text-custom-2">Email</h4></div>
          <input
            type="text"
            name="email"
            placeholder="example@domain.com"
            class="w-100 p-2 bg-custom-1 border-0 rounded text-custom-2 custom-input"
            required
          />
          <div><h4 class="me-9 text-custom-2">Password</h4></div>
          <input
            type="password"
            name="password"
            id="password-field"
            class="w-100 p-2 bg-custom-1 border-0 rounded custom-input"
            required
          />
          <div class="text-custom w-100">
            <input type="checkbox" id="show-password" />
            <label for="show-password">Show Password</label>
          </div>
          <input
            type="submit"
            class="w-100 p-2 bg-blue border-0 rounded text-custom"
          />
          <a href="/user-signup" class="text-light">Sign Up</a>
          <a href="/admin/user-forgot-password" class="text-light"
            >Forgot Password?</a
          >
        </form>
      </div>
    </div>

    <script>
      document
        .getElementById("show-password")
        .addEventListener("click", function () {
          const passwordField = document.getElementById("password-field");
          if (this.checked) {
            passwordField.type = "text";
          } else {
            passwordField.type = "password";
          }
        });
    </script>
  </body>
</html>
