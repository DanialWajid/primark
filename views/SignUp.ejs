<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/signup.css" />
  </head>
  <body
    class="bg-image-1 d-flex justify-content-center align-items-center bg-light mt-5"
  >
    <div class="container d-flex justify-content-center align-items-center">
      <div class="row bg-white shadow w-50 p-4">
        <!-- Left Side - Form -->
        <div class="col-md-8 d-flex flex-column gap-3 px-5 pt-3">
          <h1 class="text-center">Sign Up</h1>
          <p class="text-center">
            Enter your details to create an account and stay updated on new
            collections and trends.
          </p>
          <form action="/user-signup" method="POST">
            <!-- Username Field -->
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                name="name"
                class="form-control p-2 border-2 rounded"
                required
              />
            </div>

            <!-- Email Field -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                name="email"
                class="form-control p-2 border-2 rounded"
                required
              />
            </div>

            <!-- Password Field -->
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                name="password"
                class="form-control p-2 border-2 rounded"
                required
              />
              <small class="form-text text-muted">
                Password must be 8+ characters, with at least one uppercase,
                lowercase, number, and special character.
              </small>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-3">
              <label for="confirmPassword" class="form-label"
                >Confirm Password</label
              >
              <input
                type="password"
                name="confirmPassword"
                class="form-control p-2 border-2 rounded"
                required
              />
            </div>

            <!-- Show Password Checkbox -->
            <div class="form-check mb-3">
              <input
                type="checkbox"
                class="form-check-input"
                id="showPassword"
              />
              <label class="form-check-label" for="showPassword">
                Show Password
              </label>
            </div>

            <!-- Submit Button -->
            <input
              type="submit"
              class="btn btn-dark w-100 p-2 text-light fs-5 fw-bold"
              value="Sign Up"
            />
          </form>
          <p class="mt-4">
            By signing up, you confirm that you have read our
            <a href="#" class="text-dark">Privacy Notice</a> and agree to
            receive personalised communications. You may unsubscribe at any
            time.
          </p>
        </div>

        <!-- Right Side - Image -->
        <div class="col-md-4 d-none d-md-block p-0">
          <div
            class="bg-image w-100 h-100"
            style="
              background-image: url(/images/SS24_emailsignup_7_3.avif);
              background-size: cover;
              background-position: center;
            "
          ></div>
        </div>
      </div>
    </div>

    <script>
      const showPasswordCheckbox = document.getElementById("showPassword");
      const passwordFields = document.querySelectorAll(
        'input[type="password"]'
      );
      showPasswordCheckbox.addEventListener("change", function () {
        passwordFields.forEach((field) => {
          field.type = this.checked ? "text" : "password";
        });
      });
    </script>
  </body>
</html>
